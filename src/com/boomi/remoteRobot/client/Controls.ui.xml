<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <g:HTMLPanel>

        <div class="logo">
            <img src="img/logo.png"/>
        </div>
        <div class="header-controls">
            <div class="btn-group btn-group-lg btn-group-justified" role="group">
                <g:Anchor ui:field="connectButton" styleName="btn btn-default"><i class="fa fa-wifi"></i> Connect</g:Anchor>
                <g:Anchor ui:field="dockButton" styleName="btn btn-default"><i class="fa fa-plug"></i> Dock</g:Anchor>
            </div>

            <div id="speed-controls">
                <g:Anchor ui:field="speedUpButton"><i class="fa fa-caret-square-o-up"></i></g:Anchor>
                <g:Label ui:field="speedDisplay">200</g:Label>
                <g:Anchor ui:field="slowDownButton"><i class="fa fa-caret-square-o-down"></i></g:Anchor>
            </div>

            <div id="direction-controls">
                <g:Button ui:field="forwardButton" styleName="btn btn-default btn-lg"><i class="fa fa-long-arrow-up"></i></g:Button>
                <div id="center-controls">
                    <g:Button ui:field="leftButton"  styleName="btn btn-default btn-lg" ><i class="fa fa-long-arrow-left"></i></g:Button>
                    <g:Button ui:field="rightButton" styleName="btn btn-default btn-lg" ><i class="fa fa-long-arrow-right"></i></g:Button>
                </div>
                <g:Button ui:field="reverseButton" styleName="btn btn-default btn-lg" ><i class="fa fa-long-arrow-down"></i></g:Button>
            </div>

        </div>
    </g:HTMLPanel>
</ui:UiBinder>